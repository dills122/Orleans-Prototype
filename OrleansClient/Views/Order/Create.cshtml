@model DataModels.Models.Order
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Order</h4>

<h5>Pipeline runs a fire and forget process</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="OrderDescription" class="control-label"></label>
                <input asp-for="OrderDescription" class="form-control" />
                <span asp-validation-for="OrderDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <select asp-for="Username" asp-items="@ViewBag.Users" class="form-control"></select>
                <span asp-validation-for="orderType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="orderType" class="control-label"></label>
                @Html.DropDownList("AccountType",
          Html.GetEnumSelectList<DataModels.Models.OrderType>(),
          "Select Account Type", new { @class = "form-control" })
                <span asp-validation-for="orderType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="files" multiple />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>